(rule
 (with-outputs-to
  err_default_several_file.output
  (system "! %{bin:ocamlformat} %{dep:sample/a.ml} %{dep:sample/b.ml}")))

(alias
 (name runtest)
 (action
  (diff err_default_several_file.expected err_default_several_file.output)))

