(library
 (name parse_wyc)
 (libraries menhirLib ocaml_412)
 (flags
  (:standard -w -9 -open Ocaml_412)))

(ocamllex lexer)

(menhir
 (flags --strict --inspection --unused-tokens --table --cmly)
 (modules parser))

(rule
 (targets parser_recover.ml)
 (deps parser.cmly)
 (action
  (with-stdout-to
   %{targets}
   (run ../menhir-recover/main.exe parser.cmly))))
