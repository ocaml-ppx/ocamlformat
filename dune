(env
 (release
  (flags (:standard -noassert))))

(rule
 (targets ocamlformat-help.txt)
 (mode promote)
 (action (with-stdout-to %{targets} (run ./bin/ocamlformat.exe --help=plain))))

(data_only_dirs test-extra)
